<p id="notice"><%= notice %></p>

<h1>Listing Screenshots</h1>

<table>
  <thead>
    <tr>
      <th>Season</th>
      <th>Episode number</th>
      <th>Time start</th>
      <th>Time end</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @screenshots.each do |screenshot| %>
      <tr>
        <td><%= screenshot.season %></td>
        <td><%= screenshot.episode_number %></td>
        <td><%= screenshot.time_start %></td>
        <td><%= screenshot.time_end %></td>
        <td><%= link_to 'Show', screenshot %></td>
        <td><%= link_to 'Edit', edit_screenshot_path(screenshot) %></td>
        <td><%= link_to 'Destroy', screenshot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

